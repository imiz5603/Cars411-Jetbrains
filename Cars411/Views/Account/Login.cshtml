<div class="container-fluid" >
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="account-content">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7 col-lg-6">
                        <img src="~/assets/img/carlogo.jpeg" class="img-fluid" alt="Login">
                    </div>
                    <div class="col-md-12 col-lg-6 login-right">
                        <div class="login-header">
                            <h3>Login</h3>
                            <p class="account-subtitle">Access your Dashboard</p>
                        </div>
                        @if (ViewBag.IsError != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.IsError
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                        }
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <form>
                                <div class="form-group form-focus">
                                    <input type="email" class="form-control floating" name="Email" required>
                                    <label class="focus-label">Email</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="password" class="form-control floating" name="password" required>
                                    <label class="focus-label">Password</label>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" href="@Url.Action("ForgetPassword", "Account")">Forgot Password ?</a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit" style="background-color: #FE7157; border-color:#FE7157">Login</button>
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or">or</span>
                                </div>

                                <div class="text-center dont-have">Don’t have an account? <a href="@Url.Action("Register", "Account")">Register</a></div>
                            </form>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>